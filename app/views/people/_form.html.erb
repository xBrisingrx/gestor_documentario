<%= form_with(model: person, id: 'form-person',class: 'g-brd-around g-brd-gray-light-v4 g-pa-20 g-mb-10', multipart: true, local: true ) do |form| %>
  <div class="form-group row g-mb-10">
    <%= form.label :legajo, 'NÂº legajo (*)', class: "col-sm-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-9">
      <%= form.text_field :legajo, class: "form-control", required: true  %>
    </div>
  </div>
  <div class="form-group row g-mb-10">
    <%= form.label :last_name, 'Apellido (*)', class: "col-sm-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-9">
      <%= form.text_field :last_name, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group row g-mb-10">
    <%= form.label :name, 'Nombre (*)', class: "col-sm-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-9">
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :dni, 'DNI (*)', class: "col-sm-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-3">
      <%= form.text_field :dni, class: "form-control form-control-md rounded-0", required: true, minlength: '8' %>
      <% if @person.errors[:dni].any? %>
        <small class="form-control-feedback"><%= @person.errors[:dni].first %></small>
      <% end %>
    </div>
    <label class="form-check-inline u-check g-pl-25">
      <%= form.check_box :dni_has_expiration %>
      Tiene vencimiento
    </label>
    <%= form.label :expiration_date_dni,"Fecha vencimiento", class: "col-2 col-form-label"%>
    <div class="col-3">
      <%= form.date_field :expiration_date_dni, class: "form-control rounded-0 form-control-md" %>
    </div>
  </div>

  <div class="form-group row g-mb-20">
    <%= form.label :pdf_dni, 'DNI PDF (*)', class: 'col-4'  %>
    <%= form.file_field :pdf_dni, class: 'form-control col-6', accept: "application/pdf"%>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :cuil, 'CUIL (*)', class: "col-sm-2 col-form-label g-mb-10"%><br>
    <div class="col-sm-3">
      <%= form.text_field :cuil, class: "form-control", minlength: '11', required: true  %>
    </div>
    <div class="col-sm-5">
      <%= form.file_field :pdf_cuil, class:'form-control', accept: "application/pdf"%>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :birth_date, "Fecha nacimiento (*)", class: "col-sm-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-3 input-group g-brd-primary--focus">
      <%= form.date_field :birth_date, class: "form-control" %>
    </div>
    <div class="col-sm-5">
      <%= form.file_field :pdf_start_activity, class:'form-control', accept: "application/pdf"%>
    </div>
  </div>

  <div class="form-group row g-mb-10">
    <%= form.label :nationality, 'Nacionalidad (*)', class: "col-sm-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-9">
      <%= form.text_field :nationality, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row g-mb-10">
    <%= form.label :direction, 'Domicilio (*)', class: "col-sm-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-9">
      <%= form.text_field :direction, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row g-mb-10">
    <%= form.label :phone, 'Telefono (*)', class: "col-sm-2 col-form-label g-mb-10" %><br>
    <div class="col-sm-9">
      <%= form.text_field :phone, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-6">
      <%= form.label :company, "Pertenece a: (*)", class: "col-sm-2 col-form-label g-mb-10" %>
    </div>
    <div class="col-6">
      <select name="person[company_id]" id="person_company_id" class="select-2-company">
        <option> Seleccione empresa </option>
        <% @companies.each do |company| %>
          <% if !@person.nil? && @person.company_id == company.id %>
            <option value="<%= company.id %>" selected> <%= company.name %> </option>
          <% else %>
            <option value="<%= company.id %>"> <%= company.name %> </option>
          <% end %>
        <% end %>
      </select>
    </div>
  </div>

  <div class="row">
    <%= form.submit "Guardar", class: "btn u-btn-primary mr-2" %>
     <button type="button" class="btn u-btn-red" data-dismiss="modal" aria-label="Close">Cancelar</button>
  </div>
<% end %>
